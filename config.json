{
  "source": [".properties_json/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "css":{
      "transformGroup": "css",
      "transform": ["color/rgb"],
      "buildPath": "build/css/",
      "files":[{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    }
  }
}
